<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DataWhere</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />



    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">


    <link id="bootstrapStyle" rel="stylesheet" href="/css/bootstrap.css">
    <link rel="preload" href="/css/bootstrap2.css" as="text/css">

    <link id="mainStyle" href="/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/css/style2.css" rel="preload" as="text/css" />

    <link rel="stylesheet" href="https://cdn.plyr.io/3.6.1/plyr.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/css/tempusdominus-bootstrap-4.min.css" />

    <link rel="stylesheet" href="https://cdn.datatables.net/1.10.20/css/dataTables.bootstrap4.min.css">

    <link rel="shortcut icon" href="/img/j2i-logo-favicon.png" type="image/x-icon">
    <link rel="icon" href="/img/j2i-logo-favicon.png" type="image/x-icon">
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/css/select2.min.css" rel="stylesheet" />
    <link href="~/lib/dropzone.css" rel="stylesheet" />

</head>
<body>
    <div class="wrapper">
        <div class="row p-0 m-0">
            <div class="col-3 col-md-1 p-0 m-0">
                <nav id="sidebar" class="active py-5">
                    <ul class="list-unstyled components mb-5">
                        <li class="position-relative">
                            <a class="py-4" asp-controller="Home" asp-action="Index">
                                <img src="/img/company.png" alt="" height="30px" width="30px">
                                <div class="sidebar-item-text">
                                    <div class="overlay"></div>
                                    <p class="text-wrap">My Documents</p>
                                </div>
                            </a>
                        </li>
                    </ul>

                </nav>
            </div>

            <div class="col-9 col-md-11 p-0 m-0">

                <!-- Page Content  -->
                <div id="content" class="p-0 pb-4">

                    <div class="row px-3 py-3 m-0 align-items-center">

                        <div class="col-12 col-md-2 pl-2 d-flex  justify-content-center justify-content-md-start">
                            <img src="/img/j2i-logo-favicon.png" alt="logo">
                        </div>

                        <div class="col-12 col-md-5 my-3 my-md-0">
                            @*<input class="topBar-search px-3 py-2" type="text" placeholder="Search">*@
                        </div>

                        <div class="col-12 col-md-5 p-0 m-0 d-flex flex-wrap align-items-center justify-content-center justify-content-md-end">

                            @*<a class="mr-3" href="#">
                                    <img src="/img/bell.svg" alt="" width="25px">
                                </a>


                                <a class="mr-3" href="#">
                                    <img src="/img/help.svg" alt="" width="25px">
                                </a>*@

                            <div class="d-inline-block">
                                <img class="rounded-circle" src="/img/profile.png" width="50px" height="50px" alt="">
                            </div>


                            <div class="d-inline-block ml-2">
                                <h6 class="mb-0 text-primary">Welcome</h6>
                                <p class="mb-0 d-inline text-primary">
                                    @User.Identity.Name
                                </p>

                                <div class="dropdown d-inline-block">

                                    <a class="ml-2" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                                        <img src="/img/arrow-down.png" alt="">

                                    </a>

                                    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuButton">
                                        <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                    <hr class="pt-0 mt-0">


                    @RenderBody()

                    <p class="ml-5 mt-3 position-absolute" style="bottom:0;">Powered by: <a href="#"><b><u>Trade Mate</u></b></a></p>
                </div>

            </div>

        </div>




    </div>
    <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
    <script src="/js/moment.js"></script>
    <script src="/js/player.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/tempusdominus-bootstrap-4/5.0.0-alpha14/js/tempusdominus-bootstrap-4.js"></script>

    <script src="https://cdn.datatables.net/1.10.20/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.20/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.1/jquery.validate.min.js"></script>
    <script src="/lib/dropzone.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-beta.1/dist/js/select2.min.js"></script>

    <script>
        Dropzone.options.UploadForm = {
            maxFilesize: 20, // MB
            acceptedFiles: "image/*, .pdf, .docx, .docm, .dotm, .dotx, .xlsx, .xlsb, .xls, .xlsm, .pptx, .ppsx, .ppt, .pps, .pptm, .potm, .ppam, .potx, .ppsm",
            //accept: function ()
            //{
            //}
            success: function (a, b) {
                window.location.reload();
            }

        };
    </script>
    <script>
        // $(window).resize(function () {
        //     var width = $(".camer-view").width();
        //     $(".camer-view").height(width * 0.565);
        // });


        $(function () {
            // var width = $(".camer-view").width();
            // $(".camer-view").height(width * 0.565);
            // videojs(document.querySelector('.video-js'));

            $('#dataTable').DataTable
                ({
                    "dom": 'rt<"bottom"lip><"clear">',
                    "searching": false,
                    "language":
                    {
                        "lengthMenu": "_MENU_ ",
                        "paginate":
                        {
                            "previous": "&laquo;",
                            "next": "&raquo;"
                        }
                    }
                });
            $("#dataTable_info").addClass("d-inline-block");
            $("#dataTable_info").addClass("ml-2");
            $("#dataTable_length").addClass("d-inline-block");
            $("#dataTable_paginate").addClass("d-inline-block");
            $("#dataTable_paginate").addClass("float-right");

            $('.datetimepicker-input').datetimepicker({
                inline: true,
                keepOpen: true,
            });

            $('.customizer-btn').on('click', function () {

                $('.customizer-preview').toggleClass('d-none');
                $('.customizer-btn-outter').toggleClass('col-2');
                $('.customizer-btn-outter').toggleClass('p-0');
            });
        });
        function swapStylesheet(sheet, bootstrap) {
            document.getElementById('mainStyle').setAttribute('href', sheet);
            document.getElementById('bootstrapStyle').setAttribute('href', bootstrap);
        }
    </script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
