@model User
@{
    Layout = null;
}
<!doctype html>
<html lang="en" class="h-100">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link id="bootstrapStyle" rel="stylesheet" href="/css/bootstrap.css">
    <link rel="preload" href="/css/bootstrap2.css" as="text/css">

    <link id="mainStyle" href="/css/style.css" rel="stylesheet" type="text/css" />
    <link href="/css/style2.css" rel="preload" as="text/css" />


    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Lato:wght@400;700;900&display=swap" rel="stylesheet">

    <link rel="shortcut icon" href="/img/j2i-logo-favicon.png" type="image/x-icon">
    <link rel="icon" href="/img/j2i-logo-favicon.png" type="image/x-icon">
    <title>TradeMate</title>

    <style>
        .btn {
            position: relative;
        }

        .dropdown-toggle::after {
            display: none;
        }
    </style>
</head>
<body class="h-100">

    <div class="container-fluid h-100">
        <div class="row justify-content-center align-items-center h-100">

            <div class="col-md-6 bg-img h-100 d-flex align-items-center justify-content-center flex-wrap">
                <div class="blue-overlay"></div>

                <div class="text-center w-100">
                    <h2 class="text-white font-weight-bold">Welcome to Trade Mate</h2>
                </div>

            </div>


            <div class="col-md-6  h-100 d-flex align-items-center justify-content-center flex-wrap" style="background: #fff;border-top-left-radius: 30px;border-bottom-left-radius: 30px;">




                @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "col-11 col-md-8 text-center" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    if (@ViewBag.Message != null)
                    {
                        <div style="border:1px solid red">
                            @ViewBag.Message
                        </div>
                    }


                    @*<img class="img-fluid img-responsive col-12 col-md-7" src="/img/j2i-logo.png" style="height:150px;width:auto;" alt="">*@

                    <p class="my-5">Welcome Back! Please login to continue</p>
                    @Html.ValidationMessageFor(a => a.Email)
                    <br />
                    @Html.ValidationMessageFor(a => a.Password)
                    <div class="form-group">
                        <div class="input-group mb-2 grey-shadow">
                            <div class="input-group-prepend">
                                <div class="input-group-text" style="background:#fff;border:none;">
                                    <i class="fa fa-envelope icon"></i>
                                </div>
                            </div>
                            @Html.TextBoxFor(a => a.Email, new { @class = "form-control ini-input-text pr-4 pl-0 py-2" })

                        </div>
                    </div>



                    <div class="form-group">
                        <div class="input-group mb-2 grey-shadow">
                            <div class="input-group-prepend">
                                <div class="input-group-text" style="background:#fff;border:none;">
                                    <i class="fa fa-lock icon"></i>
                                </div>
                            </div>
                            @Html.PasswordFor(a => a.Password, new { @class = "form-control ini-input-text pr-4 pl-0 py-2" })

                        </div>
                    </div>



                    <button type="submit" class="btn btn-primary text-uppercase px-5 w-100 font-weight-bold">Sign In</button>
                    <a asp-controller="Account" asp-action="Register" class="btn btn-primary text-uppercase mt-2 px-5 w-100 font-weight-bold">Register</a>

                }

            </div>

        </div>
    </div>





    <script src="/js/jquery.min.js"></script>
    <script src="/js/popper.js"></script>
    <script src="/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>

    <script>
        $(function () {
            $('.customizer-btn').on('click', function () {

                $('.customizer-preview').toggleClass('d-none');
                $('.customizer-btn-outter').toggleClass('col-2');
                $('.customizer-btn-outter').toggleClass('p-0');
            });
        });



        function swapStylesheet(sheet, bootstrap) {
            document.getElementById('mainStyle').setAttribute('href', sheet);
            document.getElementById('bootstrapStyle').setAttribute('href', bootstrap);
        }</script>

</body>
</html>